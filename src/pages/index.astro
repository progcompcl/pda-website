---
import Header from "../components/Header.astro";
import background from "../assets/utfsm.jpg";
import Base from "../layouts/Base.astro";
import { Link } from "@/components/ui/link";
import { FileText, Info } from "lucide-react";
import { Image } from "astro:assets";
import logo from "../assets/logo-dark.svg";
---

<Base title="Inicio" bodyClasses={["dark"]}>
  <Header variant="home" />
  <main class="h-[100dvh]">
    <Image
      class="absolute top-0 left-0 h-[100dvh] -z-10 filter brightness-[0.5] object-cover object-[90%]"
      src={background}
      alt="Universidad Técnica Federico Santa María, Valparaíso"
    />
    <div
      class="grid grid-rows-[minmax(0,3fr)_minmax(0,4fr)] h-full justify-items-center"
    >
      <Image src={logo} alt="Logo CIPC" class="self-center max-h-[50%]" />
      <div
        class="grid grid-rows-[minmax(0,1fr)_minmax(0,3fr)] justify-items-center h-full"
      >
        <div class="self-center">
          <h1
            class="text-2xl font-title text-center text-[clamp(3rem,6vw,5rem)] font-black tracking-tighter leading-[0.95] text-shadow-lg/50 text-white"
          >
            PROGRAMADORES DE <span class="text-logo-orange">AMÉRICA</span> 2026
          </h1>
        </div>
        <div>
          <h2
            class="mt-4 text-md lg:text-lg text-center text-white text-shadow-black text-shadow-lg"
          >
            <p>ICPC Latin America Championship 2026</p>
            <p>Santiago - Valparaíso, Chile</p>
          </h2>
          <div class="flex justify-center">
            <Link variant="secondary" size="lg" className="m-2" href="/acerca"
              ><Info /> Más información</Link
            >
          </div>
        </div>
      </div>
    </div>
  </main>
</Base>
