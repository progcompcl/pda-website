              <h3 class="text-lg font-bold text-primary">{day.day}</h3>
            </div>

            {/* Lista de eventos */}
            <div class="p-4 flex-1">
              <ul class="space-y-4">
                {day.events.map((event) => (
                  <li
                    class={`flex flex-col ${event.primary ? "bg-blue-50/10 dark:bg-blue-900/20 -mx-2 p-2 rounded-md border border-blue-200/20" : ""}`}
