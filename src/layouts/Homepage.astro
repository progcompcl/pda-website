---
import Header from "../components/Header.astro";
import santiagoVertical from "../assets/santiago-vertical.jpeg";
import santiagoHorizontal from "../assets/santiago-horizontal.jpeg";
import Base from "../layouts/Base.astro";
import { Link } from "@/components/ui/link";
import { Info } from "lucide-react";
import { Image } from "astro:assets";
import logo from "../assets/logo-dark.svg";

// Asegúrate de que las rutas a las imágenes sean correctas
import logoHuawei from "../../public/Huawei.png";
import logoJetBrains from "../../public/JetBrains.svg";
import logoItau from "../../public/logoitau.png";
import logoAgendaPro from "../../public/logoagendapro.png";
import logoBuk from "../../public/logobuk.png";
import logoIndex from "../../public/logoindex.png";
import logoNic from "@/assets/Nic-chile.png";
import logoSynopsys from "@/assets/synopsys-logo.svg";
import logoNubank from "@/assets/Nubank_logo.png";
import logoCanals from "@/assets/canals.svg";
import logoGobiernoRS from "../../public/gobierno_regional.png";
import MTIG from "@/assets/MTIG.png";
import mindfree from "@/assets/Mindfree.jpg";
import UC from "../../public/PUC.png";
import UTFSM from "../../public/UTFSM.png";
import SCCC from "../../public/sccc.webp"
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base title="Inicio" bodyClasses={["dark"]}>
  <Header variant="home" />
  
  <main class="min-h-[100dvh] relative pb-12">
    
    <Image
      class="block lg:hidden fixed top-0 left-0 w-full h-full -z-10 filter brightness-[0.5] object-cover"
      src={santiagoVertical}
      alt="Santiago de Chile"
    />

    <Image
      class="hidden lg:block fixed top-0 left-0 w-full h-full -z-10 filter brightness-[0.5] object-cover object-[0%_30%]"
      src={santiagoHorizontal}
      alt="Santiago de Chile"
    />
    
    <div class="flex flex-col items-center w-full pt-20 lg:pt-0 lg:min-h-screen lg:grid lg:grid-rows-[minmax(0,2fr)_minmax(0,5fr)] justify-items-center">
      
      <Image 
        src={logo} 
        alt="Logo LAC" 
        class="self-center lg:h-80 w-auto mb-1 lg:mb-0 object-contain lg:self-end px-4 lg:pb-4" 
      />
      
      <div class="grid grid-rows-[auto_1fr] lg:grid-rows-[minmax(0,1fr)_minmax(0,3fr)] justify-items-center w-full lg:self-start">
        
        <div class="self-center px-4">
          <h1 class="text-2xl font-title text-center text-[clamp(2rem,6vw,5rem)] font-black tracking-tighter leading-[0.95] text-shadow-lg/50 text-white">
            <slot name="title">
              2026 ICPC <span class="text-logo-orange whitespace-nowrap">LATIN AMERICA</span> CHAMPIONSHIP
            </slot>
          </h1>
        </div>

        <div class="flex flex-col items-center w-full pb-10">
          <h2 class="mt-2 text-md lg:text-lg text-center text-white text-shadow-black text-shadow-lg">
            <slot name="subtitle">
              <p>Santiago, Chile</p>
            </slot>
          </h2>

          <div class="flex justify-center mt-2">
            <Link
              variant="default"
              size="lg"
              className="m-2"
              href={getRelativeLocaleUrl(lang, "/about/")}
            >
              <Info />{t("home.about-btn")}
            </Link>
          </div>

          <div class="flex flex-col md:flex-row justify-center items-start md:items-center gap-8 md:gap-12 mt-8 bg-white/60 backdrop-blur-sm rounded-2xl px-8 py-6 max-w-[90vw] mx-auto shadow-lg">
             
             <div class="flex flex-col items-center text-center gap-3 w-full">
                 <a 
                   href="https://www.huawei.com" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="block transition-transform hover:scale-105"
                 >
                   <Image 
                     src={logoHuawei} 
                     alt="Huawei" 
                     class="h-20 w-auto object-contain mx-auto" 
                   />
                 </a>
                 <span class="text-sm md:text-base font-bold text-gray-900 uppercase tracking-wide leading-tight max-w-[240px]">
                   ICPC Diamond Multi-Regional Sponsor
                 </span>
             </div>
             
             <div class="hidden md:block h-24 w-px bg-gray-400"></div>

             <div class="flex flex-col items-center text-center gap-3 w-full">
                 <a 
                   href="https://www.jetbrains.com" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="block transition-transform hover:scale-105"
                 >
                   <Image 
                     src={logoJetBrains} 
                     alt="JetBrains" 
                     class="h-16 w-auto object-contain mx-auto" 
                   />
                 </a>
                 <span class="text-sm md:text-base font-bold text-gray-900 uppercase tracking-wide leading-tight max-w-[240px]">
                   ICPC Global Sponsor Programming Tools
                 </span>
             </div>
          </div>

          <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10 mt-6 bg-white/60 backdrop-blur-sm rounded-xl px-8 py-4 max-w-[90vw] mx-auto shadow-md">
             <a 
               href="https://nubank.com.br/" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoNubank} alt="Nu Bank" 
                 class="h-14 md:h-14 w-auto object-contain opacity-90 hover:opacity-100 transition-opacity" 
               />
             </a>
          </div>

          <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10 mt-6 bg-white/60 backdrop-blur-sm rounded-xl px-8 py-4 max-w-[90vw] mx-auto shadow-md">
             
            <a 
               href="https://mtig.uc.cl/" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={MTIG} alt="MTIG" 
                 class="h-16 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a> 

             <a 
               href="https://mindfree.cl/" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={mindfree} alt="mindfree" 
                 class="h-16 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a> 
            
            <a 
               href="https://www.itau.cl" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoItau} alt="Itau" 
                 class="h-12 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a>

             <a 
               href="https://www.buk.cl" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoBuk} alt="Buk" 
                 class="h-12 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a>

             <a 
               href="https://agendapro.com" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoAgendaPro} alt="AgendaPro" 
                 class="h-12 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a>

             <a 
               href="https://www.canals.ai/" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoCanals} alt="Canals" 
                 class="h-9 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a>

             <a 
               href="https://www.nic.cl" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoNic} alt="Nic Chile" 
                 class="h-10 md:h-12 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a>

             <a 
               href="https://www.synopsys.com" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoSynopsys} alt="Synopsys" 
                 class="h-10 md:h-12 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a>

             <a 
               href="https://www.instagram.com/grafica_index" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoIndex} alt="Publicidad Index" 
                 class="h-10 md:h-12 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity" 
               />
             </a>

          </div>

          <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10 mt-6 bg-white/60 backdrop-blur-sm rounded-xl px-8 py-4 max-w-[90vw] mx-auto shadow-md">
             <a 
               href="https://sccc.cl/" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={SCCC} alt="SCCC" 
                 class="h-24 md:h-26 w-auto object-contain opacity-90 hover:opacity-100 transition-opacity" 
               />
             </a>
          </div>

          <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10 mt-6 bg-white/60 backdrop-blur-sm rounded-xl px-8 py-4 max-w-[90vw] mx-auto shadow-md">
             <a 
               href="https://www.uc.cl" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={UC} alt="PUC" 
                 class="h-24 md:h-26 w-auto object-contain opacity-90 hover:opacity-100 transition-opacity" 
               />
             </a>
             <a 
               href="https://www.usm.cl" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={UTFSM} alt="UTFSM" 
                 class="h-24 md:h-26 w-auto object-contain opacity-90 hover:opacity-100 transition-opacity" 
               />
             </a>
          </div>

          <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10 mt-6 bg-white/60 backdrop-blur-sm rounded-xl px-8 py-4 max-w-[90vw] mx-auto shadow-md">
             <a 
               href="https://www.gobiernosantiago.cl/" 
               target="_blank" 
               rel="noopener noreferrer"
               class="transition-transform hover:scale-105"
             >
               <Image 
                 src={logoGobiernoRS} alt="Gobierno de Santiago" 
                 class="h-16 w-auto object-contain opacity-90 hover:opacity-100 transition-opacity" 
               />
             </a>
          </div>

        </div>
      </div>
    </div>
  </main>
</Base>