---
interface Props {
  title: string;
}
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Base from "../layouts/Base.astro";
import "../styles/page.css";
---

<Base title={title}>
  <Header />
  <main
    class="bg-background mx-auto max-w-[100%] lg:max-w-[56rem] min-h-[100dvh] shadow-xl dark:shadow-black"
  >
    <slot name="before-article" />
    <article class="prose dark:prose-invert mx-auto md:prose-xl px-4 md:px-20">
      <slot />
    </article>
  </main>
</Base>
